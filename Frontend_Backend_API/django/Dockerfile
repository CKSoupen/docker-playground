# BASE IMAGE
FROM python:3.9-alpine

# SET ENVIRONMENT VARIABLES
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# WORK DIRECTORY ON IMAGE (BECAUSE DJANGO IS A WEB DEVELOPMENT FRAMEWORK THERE IS NO NEED TO DESIGNATE A FOLDER FOR WEB)
WORKDIR /app

# COPY DEPENDENCIES TO INSTALL
COPY requirements.txt /app/

# INSTALL PYTHON DEPENDENCIES
RUN pip install -r requirements.txt

# COPY THE SOURCE CODE OF THE APP TO THE FOLDER ON THE IMAGE
COPY . /app